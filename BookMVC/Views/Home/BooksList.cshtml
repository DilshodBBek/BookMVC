@model BookAuthorViewModel;

@{
    ViewBag.Title = "Books List";
}

<h1> Books </h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model.books)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td> <a href="@Url.Action("GetBookById", "Home",new{id= item.Id})">Get book</a></td>
                </tr>
            }
        }
    </tbody>
</table>

<h1> Authors </h1>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model.authors)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                </tr>
            }
        }
    </tbody>
</table>

