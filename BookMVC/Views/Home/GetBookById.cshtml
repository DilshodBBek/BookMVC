@{
    ViewBag.Title = "Get book by Id";
    Book book = ViewBag.book;
}

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @{
                <tr>    
                    <td>@book.Id</td>
                    <td>@book.Name</td>
                    <td><a href="@Url.Action("DeleteBook","Home",new {id=book.Id})"> Delete</a></td>
                </tr>
            }
        </tbody>
    </table>